    final Uri url = Uri.parse(
        'https://zapp.run/edit/flutter-zr1a206arr1a3?entry=lib/main.dart&file=lib/main.dart'); 
    
    if (!await launchUrl(url, mode: LaunchMode.externalApplication)) {
      
      debugPrint('Could not launch $url');
    }
  }

